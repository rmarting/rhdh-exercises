# Configuration defaults for RHDH Workshop scripts
# These can be overridden by environment variables

# Namespaces
GITLAB_NAMESPACE="${GITLAB_NAMESPACE:-gitlab-system}"
RHDH_NAMESPACE="${RHDH_NAMESPACE:-rhdh-gitlab}"

# Timeouts (in seconds)
DEFAULT_TIMEOUT="${DEFAULT_TIMEOUT:-300}"
GITLAB_TIMEOUT="${GITLAB_TIMEOUT:-900}"
ODF_OPERATOR_TIMEOUT="${ODF_OPERATOR_TIMEOUT:-900}"
STORAGE_CLUSTER_TIMEOUT="${STORAGE_CLUSTER_TIMEOUT:-1800}"

# Polling intervals (in seconds)
DEFAULT_POLL_INTERVAL="${DEFAULT_POLL_INTERVAL:-10}"
LONG_POLL_INTERVAL="${LONG_POLL_INTERVAL:-30}"
STORAGE_POLL_INTERVAL="${STORAGE_POLL_INTERVAL:-60}"

# OAuth/PAT Configuration
OAUTH_APP_NAME="${OAUTH_APP_NAME:-rhdh-exercises}"
PAT_NAME="${PAT_NAME:-pat-rhdh-exercises}"
OAUTH_SCOPES="${OAUTH_SCOPES:-api read_user read_repository write_repository openid profile email}"
PAT_SCOPES="${PAT_SCOPES:-api read_api read_repository write_repository}"

# TechDocs Configuration
AWS_REGION="${AWS_REGION:-us-east-2}"

# Paths
CONFIG_DIR="${CONFIG_DIR:-../custom-app-config-gitlab}"
SECRETS_FILE="${SECRETS_FILE:-${CONFIG_DIR}/gitlab-secrets.yaml}"
